<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48F44336">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UpdateEmployeeActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="top|center"
            android:text="Update Employee"
            android:textColor="#223CCC"
            android:textSize="35dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/employeeid2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter the Employee ID"
            android:inputType="text"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter the Employee Name"
            android:inputType="text"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/department2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Department"
            android:inputType="text"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/email2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/salary2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Enter Salary"
            android:inputType="text"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/gender2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Gender"
            android:inputType="text"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/age2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Employee Age"
            android:inputType="number"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/date2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Date of Joining(yyyy-mm-dd)"
            android:inputType="date"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="#5EE91E63"
                android:text="Update" />

            <Button
                android:id="@+id/clear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="#2196F3"
                android:text="CLEAR" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>